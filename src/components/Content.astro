---
import { animations } from "../data/animations"
---

<div class="hidden">
  {animations.map((anim) => anim.class).join(" ")}
</div>

<div class="flex flex-col items-center mt-20 slide-in-bottom">
  <h1 class="text-4xl font-bold mb-8 text-center text-white">
    Animations available
  </h1>

  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 w-full max-w-5xl"
  >
    {
      animations.map((anim) => (
        <div class="flex flex-col items-center bg-white/5 rounded-xl px-6 pt-6 pb-12 shadow-lg border border-white/10 relative">
          <div
            class="hover-trigger w-20 h-20 bg-cyan-400/70 rounded-lg flex items-center justify-center border border-cyan-400/40 animate-on-hover"
            style={`--animation-name: ${anim.class};`}
          />

          <a
            href={`/animations/${anim.class}`}
            class="absolute bottom-[-1rem] text-lg font-semibold text-cyan-300 px-4 py-1 bg-[#0d1117] rounded-full shadow-md ring-1 ring-cyan-500/20 hover:text-cyan-200 transition-transform duration-300 hover:scale-105"
          >
            {anim.name}
          </a>
        </div>
      ))
    }
  </div>
</div>
